<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:weightSum="20"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_weight="5"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/mainicon_1"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:background="@drawable/mainicon_1" />

        <ImageButton
            android:id="@+id/mainicon_2"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:background="@drawable/mainicon_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/mainicon_3"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:background="@drawable/mainicon_3" />

        <ImageButton
            android:id="@+id/mainicon_4"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:background="@drawable/mainicon_4" />

    </LinearLayout>

</LinearLayout>